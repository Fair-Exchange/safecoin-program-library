{
    "name": "@safecoin/safe-token",
    "version": "0.2.1",
    "author": "Solana Maintainers <maintainers@solana.foundation>",
    "repository": "https://github.com/fair-exchange/safecoin-program-library",
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib",
        "src",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.mjs",
    "types": "lib/types/index.d.ts",
    "exports": {
        "import": "./lib/esm/index.mjs",
        "require": "./lib/cjs/index.js"
    },
    "scripts": {
        "clean": "shx rm -rf lib",
        "build": "yarn clean && tsc -p tsconfig.json; tsc-esm -p tsconfig.json && tsc -p tsconfig.cjs.json",
        "postbuild": "echo '{\"type\":\"commonjs\"}' > lib/cjs/package.json && echo '{\"type\":\"module\"}' > lib/esm/package.json",
        "deploy": "yarn docs && gh-pages --dist docs --dest token/js --dotfiles",
        "example": "node --experimental-specifier-resolution=node --loader ts-node/esm examples/create_mint_and_transfer_tokens.ts",
        "test": "yarn test:unit && yarn test:e2e-built && yarn test:e2e-native && yarn test:e2e-2022",
        "test:unit": "mocha test/unit",
        "test:e2e-built": "start-server-and-test 'safecoin-test-validator --bpf-program ToKLx75MGim1d1jRusuVX8xvdvvbSDESVaNXpRA9PHN ../../target/deploy/safe_token.so --reset --quiet' http://localhost:8328/health 'mocha test/e2e'",
        "test:e2e-2022": "TEST_PROGRAM_ID=ZToGWcF1Qh9H7te1MmABiGsFUKvj5zXPQ2QnTqoHpHN start-server-and-test 'safecoin-test-validator --bpf-program AToD9iqHSc2fhEP9Jp7UYA6mRjHQ4CTWyzCsw8X3tH7K ../../target/deploy/safe_associated_token_account.so --bpf-program ZToGWcF1Qh9H7te1MmABiGsFUKvj5zXPQ2QnTqoHpHN ../../target/deploy/safe_token_2022.so --reset --quiet' http://localhost:8328/health 'mocha test/e2e*'",
        "test:e2e-native": "start-server-and-test 'safecoin-test-validator --reset --quiet' http://localhost:8328/health 'mocha test/e2e'",
        "docs": "shx rm -rf docs && NODE_OPTIONS=--max_old_space_size=4096 typedoc && shx cp .nojekyll docs/",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "nuke": "shx rm -rf node_modules yarn.lock"
    },
    "dependencies": {
        "@safecoin/web3.js": "^1.44.1",
        "@solana/buffer-layout": "^4.0.0",
        "@safecoin/buffer-layout-utils": "^0.2.0",
        "start-server-and-test": "^1.14.0"
    },
    "devDependencies": {
        "@types/chai-as-promised": "^7.1.4",
        "@types/eslint": "^8.4.0",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.21",
        "@types/node-fetch": "^2.6.2",
        "@types/prettier": "^2.4.3",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^3.2.3",
        "mocha": "^9.1.4",
        "prettier": "^2.5.1",
        "shx": "^0.3.4",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.11",
        "typescript": "^4.5.5",
        "typescript-esm": "^2.0.0"
    }
}
